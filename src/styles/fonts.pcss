:root {
	--font-family-main: 'Helvetica Neue', Arial, sans-serif;

	--font-10-lh16: 10px / 16px var(--font-family-main);
	--font-12-lh16: 12px / 16px var(--font-family-main);
	--font-14-lh22: 14px / 22px var(--font-family-main);
	--font-16-lh24: 16px / 24px var(--font-family-main);
	--font-18-lh28: 18px / 28px var(--font-family-main);

	--font-weight-300: 300;
	--font-weight-400: 400;
	--font-weight-500: 500;
}
